{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Configuration for build.
    "newLine": "LF",
    "noEmitOnError": true,
    "outDir": "dist/",
    "sourceMap": true,

    // Configuration for type declarations.
    "declaration": true,
    "declarationDir": "types/",
    "declarationMap": true
  },
  "include": ["src/"],
  "exclude": ["src/**/*.spec.ts", "src/__mocks__/"]
}
